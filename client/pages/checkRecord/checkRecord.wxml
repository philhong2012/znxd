<!--pages/checkRecord/checkRecord.wxml-->

<form bindsubmit="formSubmit" bindreset="formReset">
  <view class="weui-cells weui-cells_after-title">
    <view class="weui-cell weui-cell_input weui-cell_vcode">
      <view class="weui-cell__hd">
        <view class="weui-label">药品条码</view>
      </view>
      <view class="weui-cell__bd">
        <input class="weui-input" name="drugBcode" value="{{drugBcode}}" placeholder="请输入药品条码" />
      </view>
      <view class="weui-cell__ft">
        <view class="weui-vcode-btn">
          <button class="weui-btn" bindtap='scan' type="primary">识别</button>
        </view>
      </view>
    </view>
    <view class="weui-cell weui-cell_input">
      <view class="weui-cell__hd">
        <view class="weui-label">药品编码</view>
      </view>
      <view class="weui-cell__bd">
        <input class="weui-input" name='drugCode' value="{{drugCode}}" placeholder="请输入药品编码" />
      </view>
    </view>
    <view class="weui-cell weui-cell_input">
      <view class="weui-cell__hd">
        <view class="weui-label">药品名称</view>
      </view>
      <view class="weui-cell__bd">
        <input class="weui-input" name='drugName' value="{{drugName}}" placeholder="请输入药品名称" />
      </view>
    </view>
    <view class="weui-cell weui-cell_input">
      <view class="weui-cell__hd">
        <view class="weui-label">批号</view>
      </view>
      <view class="weui-cell__bd">
        <input class="weui-input" name='durgNumb' value="{{drugNumb}}" placeholder="请输入批号" />
      </view>
    </view>
    <view class="weui-cell weui-cell_input">
      <view class="weui-cell__hd">
        <view class="weui-label">陈列面</view>
      </view>
      <view class="weui-cell__bd">
        <picker value="{{dispSurfIndex}}" range="{{dispSurfItems}}" bindchange="onDispSurfChanged">
          <view class="weui-input">{{dispSurfItems[dispSurfIndex]}}</view>
        </picker>
      </view>
    </view>
    <view class="weui-cell weui-cell_input">
      <view class="weui-cell__hd">
        <view class="weui-label">陈列位置</view>
      </view>
      <view class="weui-cell__bd">
        <picker value="{{dispPosiIndex}}" range='{{dispPosiItems}}' bindchange="onDispPosiChanged">
          <view class="weui-input">{{dispPosiItems[dispPosiIndex]}}</view>
        </picker>
      </view>
    </view>
    <view class="weui-cell weui-cell_input">
      <view class="weui-cell__hd">
        <view class="weui-label">价格</view>
      </view>
      <view class="weui-cell__bd">
        <input class="weui-input" name='drugPrice' value='{{drugPrice}}' placeholder="请输入价格" />
      </view>
    </view>
    <view class="weui-cell weui-cell_input">
      <view class="weui-cell__hd">
        <view class="weui-label">陈列库存</view>
      </view>
      <view class="weui-cell__bd">
        <input class="weui-input" name='storeNum' value='{{storeNum}}' placeholder="请输入陈列库存" />
      </view>
    </view>
    <view class="weui-cell weui-cell_input weui-cell_vcode">
      <view class="weui-cell__hd">
        <view class="weui-label">监管码</view>
      </view>
      <view class="weui-cell__bd">
        <input class="weui-input" value="" placeholder="请输入监管码" />
      </view>
      <view class="weui-cell__ft">
        <view class="weui-vcode-btn">
          <button class="weui-btn" bindtap='scan' type="primary">识别</button>
        </view>
      </view>
    </view>
  </view>
 

  <view>
    <button class='weui-btn' form-type='submit' type='primary'>保存继续采集</button>
    <button class='weui-btn' type='default'  bindtap='takePhoto'>拍照</button>
    <button class='weui-btn' type='default'>进入其他店铺</button>
    <button class='weui-btn' type='default'>保存退出</button>
  </view>
</form>